extends layouts/main

block content
    .form__container
        form(action=`/recruit${routes.uploadRecruit}`, method="post")
            label(for="title") Recruit title
            input(type="text", id="title", name="title")
            label(for="playTime") Play Time
            input(type="datetime-local", id="playTime", name="playTime")
            label(for="location") Location
            input(type="text", id="location", name="location")
            label(for="recruitNum") Recruit Number
            input(type="number", id="recruitNum", name="recruitNum")
            label(for="description")  Recruit Description
            textarea(id="description",name="description")
            input(type="submit", value="submit")