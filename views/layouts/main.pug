include ../mixins/message

<!DOCTYPE html>
html
    head
        title #{pageTitle}
        script(src="https://kit.fontawesome.com/cf7d6be083.js")
    body
        if messages.error
            +message({
                type:'error',
                text:messages.error
            })
        else if messages.info
            +message({
                type:'info',
                text:messages.info
            })
        else if messages.success
            +message({
                type:'success',
                text:messages.success
            })
        include ../partials/header
        main
            block content
        include ../partials/footer