extends layouts/main

block content
    .form__container
        form(action=routes.editRecruit(post.id), method="post")
            input(type="text", id="title", name="title", value=post.title)
            input(type="datetime-local", id="playTime", name="playTime", value=post.playTime)
            input(type="hidden", id="latitude" name="latitude", value=post.latitude)
            input(type="hidden", id="longitude" name="longitude" value=post.longitude)
            input(type="number", id="recruitNum", name="recruitNum", value=post.recruitNum)
            textarea(id="description",name="description")=post.description
            input(type="submit", value="submit")
    .map__container(style="width:500px;height:400px;")
        #map(style="width:500px;height:400px;")
    script(src="/script/editMap.js")
